@{
    ViewData["Title"] = "Register";
}

@model RegisterUserDto

<div class="text-center">
    <h1 class="display-4">Register</h1>

    <form method="post" asp-action="Register">

        <div class="form-group mb-3">
            <div class="row justify-content-center">
                <div class="col-3">
                    <label class="control-label" asp-for="Email">Email</label>
                </div>
                <div class="col-9">
                    <input class="form-control" type="text" asp-for="Email" required>
                </div>
            </div>
            <div class="row text-center">
                <div class="col-3">
                </div>
                <div class="col-9">
                    <span asp-validation-for="Email" class="text-danger"></span>
                </div>
            </div>
        </div>

        <div class="form-group mb-3">
            <div class="row justify-content-center">
                <div class="col-3">
                    <label class="control-label" asp-for="Password">New Password</label>
                </div>
                <div class="col-9">
                    <input class="form-control" type="password" asp-for="Password">
                </div>
            </div>
            <div class="row text-center">
                <div class="col-3">
                </div>
                <div class="col-9">
                    <span asp-validation-for="Password" class="text-danger"></span>
                </div>
            </div>
        </div>

        <div class="form-group mb-3">
            <div class="row justify-content-center">
                <div class="col-3">
                    <label class="control-label" asp-for="ConfirmPassword">Confirm Password</label>
                </div>
                <div class="col-9">
                    <input class="form-control" type="password" asp-for="ConfirmPassword">
                </div>
            </div>
            <div class="row text-center">
                <div class="col-3">
                </div>
                <div class="col-9">
                    <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
                </div>
            </div>
        </div>

        <button class="btn btn-block btn-success" type="submit">Register</button>

    </form>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}